APP_NAME=Omamori
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=omamori_db
DB_USERNAME=omamori_user
DB_PASSWORD=omamori_pass

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# Storage
STORAGE_PATH=/var/www/html/storage
OMAMORI_IMAGE_DISK=local
OMAMORI_MAX_IMAGE_SIZE=5120

# Token
TOKEN_SECRET=super-secret-key
TOKEN_TTL=3600

# Cache
CACHE_DRIVER=redis