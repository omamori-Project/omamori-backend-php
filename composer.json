{
    "name": "omamori/php-modular-backend",
    "description": "Omamori Platform - Modular PHP Backend with AltoRouter",
    "type": "project",
    "require": {
        "php": ">=8.3",
        "ext-pdo": "*",
        "ext-pgsql": "*",
        "ext-redis": "*",
        "ext-gd": "*",
        "ext-imagick": "*",
        "altorouter/altorouter": "^2.0",
        "vlucas/phpdotenv": "^5.6",
        "symfony/var-dumper": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\Core\\": "app/Core/",
            "App\\Common\\": "app/Common/",
            "App\\Modules\\": "app/Modules/",
            "Database\\": "database/"
        },
        "files": [
            "app/Common/Helpers/functions.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [],
        "post-update-cmd": []
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
